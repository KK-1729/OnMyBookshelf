<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="css/books.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">OnMyBookshelf</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if(!currentUser) { %>
        <li class="nav-item active">
          <a class="nav-link" href="/login">Login <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/register">SignUp <span class="sr-only">(current)</span></a>
        </li>
      <% } else { %> 
        <li class="nav-item active">
          <a class="nav-link" href="#">Signed In As <%= currentUser.username %> <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/logout">Logout <span class="sr-only">(current)</span></a>
        </li>
      <% } %>
    </ul>
  </div>
</nav>


<h1>This is the books page</h1>
<a href="/books/new">Add a new book</a>

<div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% books.forEach(function(book) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= book.image %>">
            </div>
            <div class="caption">
                <h3><%= book.name %></h3> 
            </div>
            <p>
                <a href="/books/<%= book._id %>" class="btn btn-primary">More Info</a>
            </p>               
        </div>
    <% }); %>
</div>

</body>
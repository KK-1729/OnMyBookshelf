<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="css/show.css">
</head>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">OnMyBookshelf</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if(!currentUser) { %>
        <li class="nav-item active">
          <a class="nav-link" href="/login">Login <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/register">SignUp <span class="sr-only">(current)</span></a>
        </li>
      <% } else { %> 
        <li class="nav-item active">
          <a class="nav-link" href="#">Signed In As <%= currentUser.username %> <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/logout">Logout <span class="sr-only">(current)</span></a>
        </li>
      <% } %>
    </ul>
  </div>
</nav>



<h1><%= book.name %></h1>

<img src="<%= book.image %>">

<h3>Author - <%= book.author %></h3>

<p><%= book.description %></p>

<p>
    <a href="/books/<%= book._id %>/comments/new" class="btn btn-success">Add New Comment</a>
</p>

<% book.comments.forEach(function(comment) { %>
    <p>
        <strong><%= comment.user.username %></strong> - <%= comment.text %>
    </p>
<% }) %>